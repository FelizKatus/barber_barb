<% if @message && @message.length > 0 then %>
  <div class="alert alert-primary" role="alert">
    <%= @message %>
  </div>
<% end %>

<h1>Customers</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">Phone</th>
      <th scope="col">Barber</th>
      <th scope="col">Date and time</th>
      <th scope="col">Color</th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <th scope="row">
          <%= customer['id'] %>
        </th>
        <td>
          <%= customer['name'] %>
        </td>
        <td>
          <%= customer['phone'] %>
        </td>
        <td>
          <%= customer['barber'] %>
        </td>
        <td>
          <%= customer['dateandtime'] %>
        </td>
        <td style="background-color: <%= customer['color'] %>">
          <%= customer['color'] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

