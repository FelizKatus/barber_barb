<% if @error && @error.length > 0 then %>
  <div class="alert alert-danger" role="alert">
    <%= @error %>
  </div>
<% end %>

<form action="/ticket" method="post" class="needs-validation" novalidate>
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="floatingInputName" name="customer[name]" value="<%= @c.name %>" placeholder="" required>
    <label for="floatingInputName">Name</label>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please put your name.
    </div>
  </div>
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="floatingInputPhone" name="customer[phone]" value="<%= @c.phone %>" placeholder="" required>
    <label for="floatingInputPhone">Phone</label>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please put your phone.
    </div>
  </div>
  <div class="form-floating mb-3">
    <select class="form-select" id="floatingSelectBarber" name="customer[barber]" aria-label="Floating label select example" required>
      <% @barbers.each do |item| %>
        <option <%= @barber == item['name'] ? 'selected' : '' %>> <%= item['name'] %> </option>
      <% end %>
    </select>
    <label for="floatingSelectBarber">Barber</label>
  </div>
  <div class="form-floating mb-3">
    <input type="text" class="form-control" id="datetimepicker" name="customer[dateandtime]" placeholder="Date and Time" autocomplete="off" required>
    <label for="datetimepicker">Date and Time</label>
    <div class="valid-feedback">
      Looks good!
    </div>
    <div class="invalid-feedback">
      Please select a date and a time.
    </div>
  </div>
  <div class="form-floating mb-3">
    <select class="form-control" id="colorpicker" name="customer[color]" aria-laber="ColorPicker example" required>
      <option selected value="">None</option>
      <option value="#7bd148">Green</option>
      <option value="#5484ed">Bold blue</option>
      <option value="#a4bdfc">Blue</option>
      <option value="#46d6db">Turquoise</option>
      <option value="#7ae7bf">Light green</option>
      <option value="#51b749">Bold green</option>
      <option value="#fbd75b">Yellow</option>
      <option value="#ffb878">Orange</option>
      <option value="#ff887c">Red</option>
      <option value="#dc2127">Bold red</option>
      <option value="#dbadff">Purple</option>
      <option value="#e1e1e1">Gray</option>
    </select>
    <small id="colorpickerHelp" class="form-text text-muted">No color by default.</small>
  </div>

  <button class="btn btn-primary" type="submit">Submit form</button>
</form>

